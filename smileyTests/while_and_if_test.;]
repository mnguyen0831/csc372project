_writeline "input value to loop through" .
_int inp .
_read inp .

_int i .
_int j .
j _is 2 .
i _is 0 .

_while i < inp _do {
    _if i % 2 = 0 _then {
        _writeline "" + i + " is even" .
    } _else {
        _writeline "" + i + " is odd" .
    }
    _while j > 0 _do {
	_writeline "" + j + " is proof that nested while loops work" . 
	j _is j - 1 .  
    }
    j _is 2 . 
    i ++ .
}
